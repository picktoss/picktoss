{
  "headers": [
    {
      "source": "/ads.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/quiz-detail/:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(bot|crawler|spider|facebookexternalhit|twitterbot|linkedinbot|whatsapp|telegram|kakaotalk-scrap).*"
        }
      ],
      "destination": "https://app.picktoss.com/quiz-detail/:id"
    },
    {
      "source": "/:path((?!api/|ads\\.txt|robots\\.txt|sitemap\\.xml|favicon\\.ico).*)",
      "destination": "/index.html"
    }
  ]
}
